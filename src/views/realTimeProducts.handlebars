<header>
  <h1>Home - Productos</h1>
</header>
<main>
  <section>
    <h3>Productos en tiempo real</h3>
    <div>
      <ul id="productsList"></ul>
    </div>
  </section>
  <section>
    <h3>Crear Producto</h3>
    <form id="productsForm">
      <input type="text" name="title" placeholder="Ingresa el nombre" />
      <input
        type="text"
        name="description"
        placeholder="Ingresa la descripción"
      />
      <input type="text" name="code" placeholder="Ingresa el código" />
      <input type="text" name="category" placeholder="Ingresa la categoría" />
      <div>¿Está Activo?<input type="checkbox" name="status" /></div>
      <input type="number" name="stock" placeholder="Ingresa el stock" />
      <input type="number" name="price" placeholder="Ingresa el precio " />
      <input type="submit" value="Guardar" />
    </form>
  </section>
  <section>
    <h3>Eliminar Producto</h3>
    <input type="number" id="pid" />
    <button id="btnDeleteProduct">Eliminar</button>
  </section>
  <p id="errorMessage" style="color: red;"></p>
</main>
<script src="/socket.io/socket.io.js"></script>
<script src="/api/public/js/productsSocket.js"></script>